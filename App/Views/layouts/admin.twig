<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{ title(title) }}</title>
    <meta name="description" content="{{ description is defined ? description : '' }}">

    <!-- Links -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/app.min.css') }}">
</head>

<body>
    {% include 'partials/header.twig' %}

        <div class="content">
            <div class="container">
                <div class="settings">
                    <div class="col-md-4">
                        <div class="settings-sidebar">
                            <nav class="settings-sidebar-nav">
                                <ul>
                                    <li class="settings-sidebar-nav-item">
                                        <a class="settings-sidebar-nav-link {{ page == 'account' ? 'active' : '' }}" href="{{ url('settings/account') }}">Account</a>
                                    </li>
                                    <li class="settings-sidebar-nav-item">
                                        <a class="settings-sidebar-nav-link {{ page == 'security' ? 'active' : '' }}" href="{{ url('settings/security') }}">Privacy and safety</a>
                                    </li>
                                    <li class="settings-sidebar-nav-item">
                                        <a class="settings-sidebar-nav-link {{ page == 'picture' ? 'active' : '' }}" href="{{ url('settings/picture') }}">Profile Picture</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="settings-content">
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/vendor/moment.js') }}"></script>
        <script src="{{ asset('js/app.min.js') }}"></script>
        {% block extra_scripts %}
        {% endblock %}
    </body>
</html>
