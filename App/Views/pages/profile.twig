                                <li><img src="" alt="&#129351;"></li>
                                <li><img src="" alt="&#129351;"></li>
                                <li><img src="" alt="&#129351;"></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                            </ul>
                        </div>
                    </div>

                    <div class="profile-content">
                        <h2>Questions</h2>
                        <div class="profile-questions">

                        </div>
                    </div>

                    <div class="profile-content">
                        <h2>Answers</h2>
                        <div class="profile-answers">

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

{% endblock %}
