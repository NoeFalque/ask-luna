                        <div class="profile-picture" style="background-image: url({{ url('uploads/' ~ user.picture) }})">
                        </div>
                        <h1>{{ user.username }}</h1>
                        <p class="profile-description">{{ user.description }}</p>
                    </div>
                    <div class="profile-stats">
                        <ul class="stats">
                            <li><span class="number">3</span> questions</li>
                            <li><span class="number">13</span> answers</li>
                            <li><span class="number">35</span> likes</li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8">

                    <div class="profile-content">
                        <h2>Rewards</h2>
                        <div class="profile-rewards">
