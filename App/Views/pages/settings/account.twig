{% extends 'layouts/admin.twig' %}

{% block content %}

    <h1>Account</h1>

    {% if errors %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

            {% for error in errors %}
                {{ error }}<br>
            {% endfor %}
        </div>
    {% endif %}

    {% if success %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

            {{ success }}
        </div>
    {% endif %}

    <form action="#" method="POST">
        <div class="form-group">
            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus value="{{ user.username ? user.username : '' }}">
        </div>

        <div class="form-group">
            <label for="email" class="sr-only">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="john@gmail.com" required value="{{ user.email ? user.email : '' }}">
        </div>

        <div class="form-group">
            <label for="description" class="sr-only">Description</label>
            <input type="text" id="description" name="description" class="form-control" placeholder="Description" value="{{ user.description ? user.description : '' }}">
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save changes</button>
        </div>
    </form>


{% endblock %}
