{% extends 'layouts/admin.twig' %}

{% block content %}

    <h1>Account</h1>

    {% if errors %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

            {% for error in errors %}
                {{ error }}<br>
            {% endfor %}
        </div>
    {% endif %}

    {% if success %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

            {{ success }}
        </div>
    {% endif %}

    <form action="#" method="POST">
        <div class="form-group">
            <label for="old_password" class="sr-only">Old password</label>
            <input type="password" id="old_password" name="old_password" class="form-control" placeholder="Old password" required autofocus>
        </div>

        <div class="form-group">
            <label for="new_password" class="sr-only">New password</label>
            <input type="password" id="new_password" name="new_password" class="form-control" placeholder="New password" required>
        </div>

        <div class="form-group">
            <label for="new_password_confirm" class="sr-only">New password confirm</label>
            <input type="password" id="new_password_confirm" name="new_password_confirm" class="form-control" placeholder="New password confirm" required>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save changes</button>
        </div>
    </form>


{% endblock %}
