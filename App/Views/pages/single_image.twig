{% extends 'layouts/default.twig' %}

{% block content %}

    <div class="single-zoom">
        <div class="single-zoom-background">
            <img src="{{ url('uploads/' ~ post.url_hd) }}" alt="{{ post.title }}">

            <span class="zoom-close">X</span>
        </div>
    </div>

    <div class="jumbotron" style="background-image: url('{{ url('uploads/' ~ post.url_hd) }}'); background-size: cover; background-position: center; background-repeat: no-repeat;">
        <div class="container">
            <h1 class="display-3">{{ post.title }}</h1>
            <a href="#" class="zoom-action">View image</a>
        </div>
    </div>

    <div class="container">
        <div class="col-md-12">
            <p>{{ post.description }}</p>
        </div>
    </div>

    <div class="container">
        <h2>Let's go deeper</h2>

        {% for comment in comments %}
            {% set i = 0 %}
            {% include 'components/questions.twig' %}
        {% endfor %}

        <div>
            <form action="#" method="POST">
                <div class="form-group">
                    <label for="question">Ask your question</label>
                    <textarea name="question" id="question" class="form-control" required></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send my question</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block extra_scripts %}
    <script src="{{ asset('js/single_post.min.js') }}"></script>
    <script src="{{ asset('js/posts_actions.min.js') }}"></script>
{% endblock %}
