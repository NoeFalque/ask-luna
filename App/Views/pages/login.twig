{% extends 'layouts/blank.twig' %}

{% block content %}
    <div class="container">
        {% if errors %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                {% for error in errors %}
                    {{ error }}
                {% endfor %}
            </div>
        {% endif %}

        <form class="form-signin" action="#" method="POST">
            <div class="form-group">
                <h2 class="form-signin-heading">Please sign in</h2>
            </div>

            <div class="form-group">
                <label for="username" class="sr-only">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus {{ data.username ? data.username : '' }}>
            </div>

            <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Sign in</button>
            </div>

            <div class="form-group">
                <p class="form-information">Don't have an account yet? <a href="{{ url('signup') }}" title="Sign up">Sign up</a></p>
            </div>
        </form>
    </div>
{% endblock %}
