<div class="loader loader-expanded"></div>
<div class="loader-background"></div>

<div class="search">
    <a href="#" class="search-close"><i class="fa fa-times" aria-hidden="true"></i></a>

    <div class="search-content">
        <div class="search-input">
            <input type="search" name="search" placeholder="Just type here..." class="search-input-input">
        </div>

        <div class="search-results">

        </div>
    </div>
</div>

<header class="header header-home">
    <div class="header-logo">
        <a href="{{ url('') }}">
            <img src="{{ asset('img/logo.png') }}" alt="Logo">
        </a>
    </div>

    <div class="header-toggle">
        <a href="#" class="header-nav-toggle"><i class="fa fa-bars" aria-hidden="true"></i></a>
    </div>

    <div class="header-nav">
        <a href="#" class="header-nav-close"><i class="fa fa-times" aria-hidden="true"></i></a>
        <div>
            <nav class="nav">
                <ul>
                    <li class="nav-item">
                        <a href="{{ url('') }}" class="nav-link" title="Title">Title</a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="{{ url('pictures-of-the-day') }}" class="nav-link" title="Pictures of the day">Pictures of the day</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div>
            <nav class="nav">
                <ul>
                    <li class="nav-item">
                        <a href="#" class="nav-link header-search"><i class="fa fa-search" aria-hidden="true"></i></a>
                    </li>

                    {% if not auth %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('login') }}">Log in</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('signup') }}">Sign up</a>
                        </li>
                    {% else %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle notifications-link" href="#">
                                <i class="fa fa-bell" aria-hidden="true"></i>
                                {% if notifications|length > 0 %}
                                    <span class="notifications-count">
                                        {{ notifications|length }}
                                    </span>
                                {% endif %}
                            </a>

                            <div class="dropdown-menu dropdown-notifications">
                                {% if notifications %}
                                    {% for notification in notifications %}
                                        <a class="dropdown-item" href="{{ notification.url }}">{{ notification.message }}</a>
                                    {% endfor %}

                                {% else %}
                                    <div class="dropdown-item">
                                        No new notifications
                                    </div>
                                {% endif %}

                                <div class="dropdown-item">
                                    <a href="#" class="toggle-notifications">Mark all as read</a>
                                </div>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle user-settings" href="#">
                                {% if picture %}
                                    <img src="{{ url('uploads/' ~ picture) }}" alt="{{ auth }}" class="header-nav-picture">
                                {% else %}
                                    <img src="{{ asset('img/default.png') }}" alt="Profile picture" class="header-nav-picture">
                                {% endif %}
                            </a>

                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ url(auth) }}">{{ auth }}</a>
                                <a class="dropdown-item" href="{{ url('settings/account') }}">Settings</a>
                                <a class="dropdown-item" href="{{ url('answer') }}">Answer questions</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('logout') }}">Log out</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
</header>
