<div class="col-md-12" style="margin-bottom: 60px; border: 1px solid #000;" data-id="{{ comment.id }}" data-level="{{ i }}">
    <p>{{ comment.content }}</p>
    <p><strong class="comment-score">{{ comment.score }}</strong></p>
    <p>by {{ comment.username }}</p>

    {% if i < 1 %}
    <a href="#" class="btn btn-secondary comment-comment">Commment</a>
    {% endif %}
    <a href="#" class="btn btn-primary comment-upvote">Upvote</a>
</div>

<div style="margin-left: 50px;">
    {% if comment.children %}
        {% for comment in comment.children %}
            {% set i = i + 1 %}
            {% include 'components/comment.twig' %}
        {% endfor %}
    {% endif %}
</div>
